@model IEnumerable<PrjCinema.MVC.Models.FilmeModelView>

@{
    ViewBag.Title = "Filmes que atuou";
}

<h2>Filmes atuados</h2>

@if (ViewBag.Erro != null)
{
    <div class="alert-danger">

        <h1>@ViewBag.Erro</h1>
    </div>
}
<p>
    @Html.ActionLink("Adicionar Filme que atuou", "")
</p>
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>

        </tr>
    }
    @Html.ActionLink("Voltar", "Index")

</table>
