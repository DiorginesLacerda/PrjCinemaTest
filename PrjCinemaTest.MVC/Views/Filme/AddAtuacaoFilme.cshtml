@model PrjCinema.MVC.Models.AtuaFilmeModelView
@{
    ViewBag.Title = "Adicionar atuação ao Filme";
}
<h2>Adicionar ator ao filme</h2>
<div class="alert-danger">

    <h1>@ViewBag.Erro</h1>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FilmeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">



                @Html.HiddenFor(model => model.FilmeId)
                @Html.ViewBag.NomeFilme.ToString()
                @Html.ValidationMessageFor(model => model.FilmeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ator, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AtorId, new SelectList(ViewBag.Atores, "Id", "Nome"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AtorId)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
