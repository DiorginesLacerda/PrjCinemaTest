@model IEnumerable<PrjCinema.MVC.Models.SerieModelView>
@{
    ViewBag.Title = "Lista de Series";
}
<h2>Lista de Series</h2>
@if (ViewBag.Erro != null)
{
    <div class="alert-danger">
        <h1>@ViewBag.Erro</h1>
    </div>
}
<p>
    @Html.ActionLink("Adicionar nova Serie", "Create")
</p>
<table class="table modal-content">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QntEpisodio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lancamento)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <p class="bg-success">
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QntEpisodio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lancamento)
            </td>
            <td>
                @Html.ActionLink("Atores", "DetailsAtores", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
            <td>
                @Html.ActionLink("Adicionar Ator", "AddAtuacaoSerie", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        </p>
    }
</table>
