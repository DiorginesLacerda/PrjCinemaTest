@using PrjCinema.MVC.Models
@using PrjCinema.MVC.Util
@model IEnumerable<PrjCinema.MVC.Models.UsuarioModelView>

<div id="exTab2" class="container">
    <br />
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#1" data-toggle="tab">Lista</a>
        </li>
        <li>
            <a href="#2" data-toggle="tab">Adicionar Usuário</a>
        </li>
    </ul>
    <div class="tab-content ">
        <div class="tab-pane active" id="1">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary list-panel" id="list-panel">
                        <div class="panel-heading list-panel-heading">
                            <h1 class="panel-title list-panel-title" id="id_p">Usuários</h1>
                        </div>
                        <div class="panel-body">
                            <table id="assets-data-table"
                                   class="table table-striped table-bordered"
                                   style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th data-orderable="false">Cpf</th>
                                        <th>Email</th>
                                        <th>Data de Cadastro</th>
                                        <th>Genero</th>
                                        <th data-orderable="false">Telefone</th>
                                        <th data-orderable="false">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var asset in Model)
                                    {
                                        <tr>
                                            <td>@asset.Nome</td>
                                            <td>@asset.Cpf</td>
                                            <td>@asset.Email</td>
                                            <td>@asset.DataCadastro</td>
                                            <td>@asset.Genero</td>
                                            <td>@asset.Telefone</td>
                                            @if (asset.Removido)
                                            {
                                                <td>
                                                    @Html.ActionLink(" ", "Ativar", new { id = asset.Id }, new { @class = "btn glyphicon glyphicon-ok btn-success" })
                                                </td>
                                            }
                                            else if (!asset.Removido)
                                            {
                                                <td>
                                                    @Html.ActionLink(" ", "Delete", new { id = asset.Id }, new { @class = "btn glyphicon glyphicon-remove btn-danger" })
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="2">
            @Html.Action("Create")
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        var grid;
        
        $(document).ready(function () {
            grid = $('#assets-data-table').DataTable(config);
        });
    </script>
}
