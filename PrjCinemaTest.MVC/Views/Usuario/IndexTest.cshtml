<div id="exTab2" class="container">
    <br />
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#1" data-toggle="tab">Lista</a>
        </li>
        <li>
            <a href="#2" data-toggle="tab">Adicionar Usuário</a>
        </li>
    </ul>
    <div class="tab-content ">
        <div class="tab-pane active" id="1">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary list-panel" id="list-panel">
                        <div class="panel-heading list-panel-heading">
                            <h1 class="panel-title list-panel-title" id="id_p">Usuários</h1>
                        </div>
                        <div class="panel-body">
                            <table id="myTable"
                                   class="table table-striped table-bordered"
                                   style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th data-orderable="false">Cpf</th>
                                        <th>Email</th>
                                        <th>Data de Cadastro</th>
                                        <th>Genero</th>
                                        <th data-orderable="false">Telefone</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="2">
            @*@Html.Action("Create")*@
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            config.ajax =  {
                "url": '/Usuario/listaUsuario',
                "type": "get",
                "datatype": "json"
            }
            config.columns =  [
                { "data": "Nome", "autoWidth": true },
                { "data": "Cpf", "autoWidth": true },
                { "data": "Email", "autoWidth": true },
                { "data": "DataCadastro", "autoWidth": true },
                { "data": "Genero", "autoWidth": true },
                { "data": "Telefone", "autoWidth": true }
                     
            ];

            $('#myTable').DataTable(config);
        })
    </script>
}
