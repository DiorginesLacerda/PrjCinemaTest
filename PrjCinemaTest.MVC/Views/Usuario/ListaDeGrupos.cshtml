@using PrjCinema.Domain.Entities.Permissoes
@model IEnumerable<PrjCinema.MVC.Models.GrupoAcessoModelView>

@{
    ViewBag.Title = "Grupos que o usuário está incluso";
}

<h2>Grupos que o usuário está incluso</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @ViewBag.Usuario
        </dd>
        <table class="table modal-content">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    
                    <td>
                        |@Html.ActionLink("Detalhes do Grupo", "DetalhesGrupoAcesso", new {item.Id})
                    </td>
                </tr>
            }
        </table>

    </dl>

</div>
<p>
    @Html.ActionLink("Voltar", "Index")
</p>
